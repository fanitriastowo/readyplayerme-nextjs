    "classnames": "^2.3.1",
    "formik": "^2.2.9",
    "framer-motion": "^4.1.17",
    "graphql": "^15.6.1",
    "lodash": "^4.17.21",
    "next": "^12.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-redux-toastr": "^7.6.5",
    "redux-persist": "^6.0.0",
    "shortid": "^2.2.16",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/react": "^17.0.33",
    "@types/react-redux-toastr": "^7.6.1",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.2",
