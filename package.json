{
  "name": "zodiac-nextjs-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check .",
    "check-lint": "eslint . --ext ts --ext tsx --ext js --max-warnings=0",
    "prepare": "husky install",
    "export": "next build && next export",
    "deploy": "NODE_OPTIONS=--max_old_space_size=4096 next build && next export && firebase deploy --only hosting",
    "test": "uvu -r ./setup-test.js -r global-jsdom/register -r tsm"
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@babel/core": "^7.0.0",
    "@chakra-ui/react": "^1.8.7",
    "@emotion/react": "^11.8.2",
    "@emotion/styled": "^11.8.1",
    "@reduxjs/toolkit": "^1.8.0",
    "classnames": "^2.3.1",
    "firebase": "^9.8.1",
    "formik": "^2.2.9",
    "framer-motion": "^6.2.8",
    "graphql": "^16.3.0",
    "lodash": "^4.17.21",
    "next": "^12.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "redux": "^4.1.2",
    "redux-persist": "^6.0.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.2.0",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "@types/react-redux": "^7.1.24",
    "dotenv": "^16.0.1",
    "eslint": "^8.12.0",
    "eslint-config-next": "^12.1.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-testing-library": "^5.5.1",
    "global-jsdom": "^8.4.0",
    "husky": "^7.0.4",
    "jsdom": "^19.0.0",
    "module-alias": "^2.2.2",
    "prettier": "^2.6.1",
    "tsm": "^2.2.1",
    "typescript": "^4.6.3",
    "uvu": "^0.5.3"
  },
  "engines": {
    "node": ">=16.14.2"
  }
}
